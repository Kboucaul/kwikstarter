{% extends 'base.html.twig' %}

{% block title %}
Accueil
{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mb-4">Nos projets actuels</h1>
    <ul>
        {% for project in projects %}
            <li>
                <h4><strong>{{project.name}}</strong></h4>
                <p>Description : {{project.description}}</p>
                <p>Montant : {{project.targetAmount|number_format(0, '.', ',')}}&euro;</p>
            </li>

        {% endfor %}
    </ul>    
    <h3>Nous avons actuellement {{ projects | length }} projets en cours</h3>
    {#<p class="font-weight-bold">The current projects are <u>{{project.name | join(', ', ' ,', ' and ') }}</u></p>#}
</div>
{% endblock %}